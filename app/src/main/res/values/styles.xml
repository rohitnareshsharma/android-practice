<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="font_pingfang_sc_regular">
        <item name="android:fontFamily">@font/pingfang_sc_regular</item>
    </style>

    <style name="font_roboto_regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="font_roboto_medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="font_roboto_bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="normal_listitem_text" parent="font_pingfang_sc_regular">
        <item name="android:textColor">@color/normal_listitem_textcolor</item>
    </style>

    <style name="normal_listitem_text_medium_bold" parent="normal_listitem_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_listitem_number_text" parent="font_roboto_regular">
        <item name="android:textColor">@color/normal_listitem_textcolor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="action_bar_title_style" parent="font_roboto_medium">
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="divider_style_horizontal">
        <item name="android:background">@color/avatar_bg_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="blurred_drop_shadow_style">
        <item name="android:background">@drawable/drop_shadow_gradient</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <style name="divider_style_vertical">
        <item name="android:background">@color/avatar_bg_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="empty_view_title_text_style" parent="font_roboto_bold">
        <item name="android:textColor">@color/empty_view_title_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="empty_view_message_text_style" parent="font_roboto_regular">
        <item name="android:textColor">@color/empty_view_message_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="retry_button_style">
        <item name="android:textColor">@color/retry_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/retry_button_background</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

</resources>
